///***菱形

#include<stdio.h>
int main()
{
	int i, j , k= 0;
	for (i = 0; i < 7; i++)
	{
		for (j = 0; j < 6-i; j++)
		{
			printf(" ");
		}
		for (k = 0; k < 2 * i + 1;k++)//1 3 5 7 9
		{
			printf("*");
		}
		printf("\n");
	}
	for (i = 0; i < 6; i++)
	{
		for (j = 0; j < i + 1; j++)
		{
			printf(" ");
		}
		for (k = 0; k < 11 - i * 2; k++)
		{
			printf("*");
		}
		printf("\n");
	}
	return 0;
}
